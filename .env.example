# Production Environment Variables for Vercel
# Copy this file to .env.production.local and customize as needed

# Node Environment
NODE_ENV=production

# Application Settings
APP_NAME=Calculator FhyTS
APP_VERSION=1.0.0

# Server Configuration (Vercel will override port)
PORT=3000
HOST=0.0.0.0

# Feature Flags
ENABLE_HISTORY=true
ENABLE_MEMORY=true
ENABLE_SCIENTIFIC=true
ENABLE_CONVERTER=true

# Analytics (Optional)
# VERCEL_ANALYTICS_ID=your_analytics_id

# Error Tracking (Optional)
# SENTRY_DSN=your_sentry_dsn

# API Rate Limiting (Optional)
MAX_HISTORY_ENTRIES=100
MAX_CALCULATION_LENGTH=1000
